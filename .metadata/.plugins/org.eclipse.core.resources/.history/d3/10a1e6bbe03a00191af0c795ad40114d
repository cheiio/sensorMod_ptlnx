#ifndef TIME_MEAS_H
#define TIME_MEAS_H

#include <time.h>

#define millis(){
	struct timespec tp;
	clock_gettime(CLOCK_MONOTONIC, &tp);
	clock_t  x_time = tp.tv_nsec;

	x_time = x_time * 1e3 / CLOCKS_PER_SEC;

	return x_time;
}
	
#endif /* SRC_TIME_MEASURING_H_ */
